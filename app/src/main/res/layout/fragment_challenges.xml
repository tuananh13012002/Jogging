<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0EFF5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp">

            <com.jogging.walking.weightloss.pedometer.steptracker.view.DistanceProgressView
                android:id="@+id/progress_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.jogging.walking.weightloss.pedometer.steptracker.view.DurationProgressView
                android:id="@+id/progress_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp" />

            <com.jogging.walking.weightloss.pedometer.steptracker.view.CaloProgressView
                android:id="@+id/progress_calo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp" />

            <com.jogging.walking.weightloss.pedometer.steptracker.view.SpeedProgressView
                android:id="@+id/progress_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
