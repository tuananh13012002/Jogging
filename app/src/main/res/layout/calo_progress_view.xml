<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_explore"
        android:padding="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/calories"
                    android:textColor="#252E32"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ic_share_calo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_share" />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.125" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.374" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.623" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.875" />


                <LinearLayout
                    android:id="@+id/linearLayout10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/challenge_calo_1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/challenge_calo_2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/challenge_calo_3" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/challenge_calo_4" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_1"
                    style="@style/CustomProgressBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:max="5000"
                    android:progress="2000"
                    android:progressBackgroundTint="#16000000"
                    android:progressTint="#696FDF"
                    app:layout_constraintEnd_toStartOf="@+id/gl1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout10" />

                <ProgressBar
                    android:id="@+id/progress_2"
                    style="@style/ProgressBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:max="500000"
                    android:min="5000"
                    android:progress="0"
                    android:progressBackgroundTint="#16000000"
                    android:progressTint="#696FDF"
                    app:layout_constraintEnd_toStartOf="@+id/gl2"
                    app:layout_constraintStart_toEndOf="@+id/progress_1"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout10" />

                <ProgressBar
                    android:id="@+id/progress_3"
                    style="@style/ProgressBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:max="3000000"
                    android:min="500000"
                    android:progress="0"
                    android:progressBackgroundTint="#16000000"
                    android:progressTint="#696FDF"
                    app:layout_constraintEnd_toStartOf="@+id/gl3"
                    app:layout_constraintStart_toEndOf="@+id/progress_2"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout10" />

                <ProgressBar
                    android:id="@+id/progress_4"
                    style="@style/ProgressBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:max="5000000"
                    android:progress="0"
                    android:progressBackgroundTint="#16000000"
                    android:progressTint="#696FDF"
                    app:layout_constraintEnd_toStartOf="@+id/gl4"
                    app:layout_constraintStart_toEndOf="@+id/progress_3"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout10" />

                <ProgressBar
                    android:id="@+id/progress_distance_max"
                    style="@style/ProgressBarEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:max="5300000"
                    android:min="3000000"
                    android:progress="0"
                    android:progressBackgroundTint="#16000000"
                    android:progressTint="#696FDF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/progress_4"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout10" />

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/progress_1">


                    <TextView
                        android:id="@+id/txt_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="57,9 / 5000 kcal"
                        android:textColor="#252E32"
                        android:textSize="16sp" />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


    </FrameLayout>
</layout>
